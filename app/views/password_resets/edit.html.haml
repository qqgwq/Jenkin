- content_for(:title, "更新密码")
.row
  .col-md-6.col-md-offset-3
    .panel.panel-wikis
      .panel-heading
        .panel-title
          %span 更新密码
      .panel-body
        = form_tag(password_resets_path, method: :patch) do
          = render 'shareds/errors'
          = render 'shareds/flash'
          .form-group
            = text_field_tag :phone, nil, placeholder: "手机号", class: "form-control"
          .form-group
            = text_field_tag :password, nil, placeholder: "请输入新的密码", class: "form-control"
          
          .form-group
            = submit_tag "更新", class: "btn btn-primary"