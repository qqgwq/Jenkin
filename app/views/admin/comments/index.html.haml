.container
  .row
    .col-md-8.col-md-offset-3
      .panel.panel-default
        .panel-heading
          .panel-title
            %span所有评论

        .panel-body
          %table.table.table-striped
            .thead
              %tr
                %th ID
                %th 内容
            .tbody
              - @comments.each do |comment|
                %tr
                  %td= comment.id
                  %td= comment.content
          = paginate @comments