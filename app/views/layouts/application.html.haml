%html
  %head
    %title Jenkin个人网站
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-98419911-1', 'auto');
    ga('send', 'pageview');
    </script>

  %body
    %nav.navbar.navbar-static-top
      .container
        .navbar-header
          .navbar-brand
            = link_to root_path do
              %i.fa.fa-home
        %ul.nav.navbar-nav.navbar-right
          - if login?
            - if current_user.is_admin
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = image_tag current_user.image.url
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to t('.All User'), users_path
                  %li.divider
                  %li= link_to t('.New Article'), new_article_path
                  %li= link_to t('.All Article'), articles_path
                  %li= link_to t('.my article'), person_user_path(current_user)
                  %li.divider
                  %li= link_to t('.Setting'), edit_user_path(current_user)
                  %li.divider
                  %li= link_to t('.Log Out'), logout_path, method: :delete
            - else
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
                  = image_tag current_user.image.url
                  = current_user.name
                  %b.caret
                %ul.dropdown-menu
                  %li= link_to t('.New Article'), new_article_path
                  %li= link_to t('.All Article'), articles_path
                  %li= link_to t('.my article'), person_user_path(current_user)
                  %li.divider
                  %li= link_to t('.Setting'), edit_user_path(current_user)
                  %li.divider
                  %li= link_to t('.Log Out'), logout_path, method: :delete
          - else
            %ul.nav.navbar-nav
              -#%li= link_to t('.Sign Up'), signup_path
              -#%li
                -#%a{:href => '#', 'data-toggle' => "modal", 'data-target' => "#signin"}> 登录
              -#%li= link_to "关于我", homes_about_path
              = render 'layouts/sidebar'
       
        .container
          .row
            .col-md-10 
              = yield
            .col-md-2
            - if login?
              %ul.list-group#categories
                %li= link_to t('.All Articles'), root_path, class: "list-group-item"
                - Category.all.each do |category|
                  %li= link_to category.name, articles_path(category: category.name), remote: true, class: "list-group-item"