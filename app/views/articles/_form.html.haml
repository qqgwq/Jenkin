- content_for(:title, "新建文章")
.main
  .container
    .row
      .col-md-6.col-md-offset-3
        .panel
          .panel-heading
            %h2= t('.publish')
          = render 'shareds/article_errors'
          .panel-body
            = simple_form_for(@article) do |f|
              .form-group
                = f.label :类型, class: "control-label"
                = f.collection_select :category_id, Category.all, :id, :name, class: "form-control"

              .form-group
                = f.label :标题, class: "control-label"
                = f.text_field :title, class: "form-control"

              .form-group
                = f.label :内容, class: "control-label"
                = f.text_area :content, class: "form-control", data: {emojiable: true}

              = f.submit t('.publish'), class: "btn btn-primary"