- if @article.is_user_like?(current_user)
  = link_to article_like_path(@article), method: :delete, "class" => "like", remote: true do
    %i.fa.fa-heart#like_heart{ style: "color:red;" }
  .span-count
    %p= @article.likes.count
    .user-avatar
      - @article.likes.each do |like|
        - if like.user.image.present?
          = image_tag like.user.image.url, width: 20, title: like.user.name, id: "user_#{like.user_id}"
- else
  = link_to article_like_path(@article), method: :post, "class" => "like", remote: true do
    %i.fa.fa-heart#like_heart
  .span-count
    %p= @article.likes.count
    .user-avatar
      - @article.likes.each do |like|
        - if like.user.image.present?
          = image_tag like.user.image.url, width: 20, title: like.user.name