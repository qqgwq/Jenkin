.main
  .container
    .row
      .col-md-8.col-md-offset-2
        .panel
          .panel-heading
            All article
          .panel-body
          - if @articles.present?
            - @articles.each do |article|
              #index
                %h2= link_to article.title, article
                %h2= article.user.name
                = image_tag article.user.image.url
                %h2
                = article.comments.count
                = t('.Comments')
                %p= time_ago_in_words(article.created_at)