.main
  .container
    .row
      .col-md-9
        .panel
          .panel-heading
            %h2= t('.All article')
            = search_form_for @q do |f|
              = f.search_field :title
              = f.submit t('.search'), class: "btn btn-primary"
          .panel-body
            %ul.list-group
          - if @articles.present?
            - @articles.each do |article|
              #index
                %h2= link_to article.title, article
                %p= article.user.name
                =image_tag article.user.image.url
                %h2
                = article.comments.count
                = t('.Comments')
                %span= time_ago_in_words(article.created_at)
          =paginate @articles