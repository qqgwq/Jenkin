.main
  .container
    .row
      .col-sm-6.col-md-4.col-md-offset-4
        .panel
          .panel-heading
            %h2= "登录"
          .panel-body
            = form_tag(login_path, method: :post) do 
              = render 'shareds/flash'
              .form-group
                = text_field_tag :phone, nil, class: "form-control", placeholder: "电话号码..."

              .form-group
                = password_field_tag :password, nil, class: "form-control", placeholder: "密码..."
                 
              .form-group
                = check_box_tag :remember_me, 1, params[:remember_me]
                = label_tag "记住我"
              = submit_tag "登录", class: "btn btn-success", data: {disable_with: " 登录中..."}