.main
  .container
  #bg
    .row
      .col-md-6.col-md-offset-3
        .panel
          .panel-heading
            %h2= t('.sign in')
          .panel-body
            = form_for(:session, url: login_path) do |f|
              .form-group
                = f.label :电话号码, class: "control-label"
                = f.text_field :phone, class: "form-control"

              .form-group
                = f.label :密码, class: "control-label"
                = f.password_field :password, class: "form-control"

              .form-group
                = f.label :记住我, class: "remember"
                = f.check_box :remember_me
            
              = f.submit t('.signin'), class: "btn btn-primary"

              .form-group
              = link_to t('.New User'), new_user_path